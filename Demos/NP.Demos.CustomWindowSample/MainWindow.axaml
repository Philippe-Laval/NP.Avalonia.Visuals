<local:CustomWindow xmlns="https://github.com/avaloniaui"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:np="https://np.com/visuals"
					xmlns:local="clr-namespace:NP.Demos.CustomWindowSample"
					x:Class="NP.Demos.CustomWindowSample.MainWindow"
					Classes="PlainCustomWindow"
					Title="NP.CustomWindowSample"
					Width="600"
					Height="400">
	<StackPanel TextBlock.FontSize="24"
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
		<TextBlock Text="{Binding $parent[Window].WindowPosition, StringFormat='Position=\{0\}'}"/>
		<TextBlock Text="{Binding $parent[Window].ClientSize, StringFormat='Size=\{0\}'}"/>
	</StackPanel>
</local:CustomWindow>
